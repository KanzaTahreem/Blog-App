<section class="single_users_container">
  <div class="single_user_headline">
    <%= render partial: "shared/user", locals: { user: @user } %>
    <div class="user_bio">
      <h3>Profile Description</h3>
      <p><%= @user.bio %></p>
    </div>
  </div>

  <div>
    <%= button_to "Create Post", new_user_post_path(user_id: @user.id), method: :get, class: "create_post" %>
    <% @recent_posts.each do |post| %>
      <%= render partial: 'shared/post', locals: { post: post, show_full_post: false } %>
    <% end %>
    <div class="btn_container">
      <%= button_to "Back", users_path, method: :get, class: "back_btn" %>
      <%= button_to "All posts", user_posts_path(user_id: @user.id), method: :get, class: "view_all" %>
    </div>
  </div>
</section>